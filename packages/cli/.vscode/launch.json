{
  "configurations": [
    {
      "name": "Debug [render]",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start:dev",
        "render", 
        "-i", "/media/alf/shared-ext3/dev/repo/github.com/alansferreira/stages/code-rookie/templates/ts-monorepo", 
        "-o", "/media/alf/shared-ext3/dev/repo/github.com/alansferreira/stages/code-rookie/templates/ts-monorepo-generated",
        "-d", "/media/alf/shared-ext3/dev/repo/github.com/alansferreira/stages/code-rookie/templates/ts-monorepo-data.json"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Debug [render help]",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start:dev",
        // "help",
        // "render" 
        "render", "--help"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Debug [help]",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "start:dev",
        "--help"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "args": [
        "test",
        "--runInBand",
        "--watchAll=false"
      ]
    }
  ]
}