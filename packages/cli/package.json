{
  "name": "@easy-peasy/easy-peasy-cli",
  "version": "0.0.1",
  "description": "",
  "bin": "dist/cli/src/main.js",
  "author": "Alan S. Ferreira",
  "private": true,
  "license": "MIT License",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "ttsc --build",
    "start:dev": "ts-node --compiler ttypescript src/main.ts",
    "pkg:linux": "yarn build && unset NODE_OPTIONS && pkg --no-bytecode --public-packages \"*\" --public .",
    
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json"
  },
  "dependencies": {
    "commander": "^8.3.0",
    "handlebars": "4.7.7",
    "pkg": "^5.4.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "terminal-kit": "^2.1.8"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.5"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "targets": [ 
      "node10-linuxstatic-x64",
      
      "node14-alpine-x64",
      "node14-linux-x64",
      "node14-win-x64",
      "node14-macos-x64"
    ],
    
    "outputPath": "releases"
  }
}
